{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Device Package",
            "type": "shell",
            "command": "make device",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Swift Package",
            "type": "shell",
            "command": "swift build -c release --build-tests",
            "problemMatcher": ["$swiftc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "swift test -c release --skip-build",
            "problemMatcher": ["$swiftc"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["Build Swift Package"]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
        }
    ]
}